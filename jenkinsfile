pipeline {
    agent any
   tools {
  terraform 'terraform'
}


    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', credentialsId: 'd3dad90e-319f-4c82-a30d-3197f3c5ffb0', url: 'https://github.com/GVindio/CornerstoneTask3.git'
            }
        }
        stage('Terraform init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('Terraform Apply') {
            steps {
                sh 'terraform apply --auto-approve'
            }
        }
    }
}
